<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Formatos.Servicios.ServiciosServicio"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_margin="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Servicios"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:paddingTop="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/barracolores"
            android:paddingTop="-50dp"
            />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Actividad*"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/campo1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/radiosmultitext"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingLeft="7dp"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Diagnóstico"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/campo2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/radiosmultitext"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingLeft="7dp"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Acción Correctiva"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/campo3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/radiosmultitext"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingLeft="7dp"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Comentarios y Recomendaciones*"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/campo4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/radiosmultitext"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingLeft="7dp"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Cancelar"
                    android:layout_width="106dp"
                    android:layout_height="22dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/btngris"
                    android:text="CANCELAR"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_Guardar"
                    android:layout_width="106dp"
                    android:layout_height="22dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/btnnaranja"
                    android:text="GUARDAR"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>