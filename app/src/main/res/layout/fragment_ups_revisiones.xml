<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Formatos.UPS.UpsRevisionesFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_margin="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPS"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:paddingTop="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/barracolores"
            android:paddingTop="-50dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Revisiones de Mantenimiento"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">


            <CheckBox
                android:id="@+id/CheckBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Revisar Alarmas" />

            <CheckBox
                android:id="@+id/CheckBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inspección de Cables" />

            <CheckBox
                android:id="@+id/CheckBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calibración del medidor" />

            <CheckBox
                android:id="@+id/CheckBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajuste de ecualización" />

            <CheckBox
                android:id="@+id/CheckBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pantalla de informe de estado" />

            <CheckBox
                android:id="@+id/CheckBox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limpieza del UPS" />

            <CheckBox
                android:id="@+id/CheckBox7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snubber por sobretemperatura" />

            <CheckBox
                android:id="@+id/CheckBox8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajuste de límites" />

            <CheckBox
                android:id="@+id/CheckBox9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pantalla de procedimiento" />

            <CheckBox
                android:id="@+id/CheckBox10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pantalla de Baterías" />

            <CheckBox
                android:id="@+id/CheckBox11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Revisión de módulos por daños" />

            <CheckBox
                android:id="@+id/CheckBox12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inspección general del área y periféricos" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">


                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Rectificador"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/campo1"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/radiosedittext"
                            android:ems="10"
                            android:paddingLeft="7dp"
                            android:textSize="16dp"
                            android:inputType="numberDecimal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="°C"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Inversor"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/campo2"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/radiosedittext"
                            android:ems="10"
                            android:paddingLeft="7dp"
                            android:textSize="16dp"
                            android:inputType="numberDecimal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="°C"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Switch estático"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/campo3"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/radiosedittext"
                            android:ems="10"
                            android:paddingLeft="7dp"
                            android:textSize="16dp"
                            android:inputType="numberDecimal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="°C"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Transformador"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/campo4"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/radiosedittext"
                            android:ems="10"
                            android:paddingLeft="7dp"
                            android:textSize="16dp"
                            android:inputType="numberDecimal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="°C"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capacitores"
                        android:textAlignment="center"/>
                    <CheckBox
                        android:id="@+id/CheckBox13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inflados"
                        android:layout_gravity="center"/>

                    <CheckBox
                        android:id="@+id/CheckBox14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Válvulas"
                        android:layout_gravity="center"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Rev. Software"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:layout_gravity="start"/>

                <EditText
                    android:id="@+id/campo5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/radiosedittext"
                    android:ems="10"
                    android:paddingLeft="7dp"
                    android:textSize="16dp"
                    android:inputType="textMultiLine"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Cancelar"
                    android:layout_width="106dp"
                    android:layout_height="22dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/btngris"
                    android:text="CANCELAR"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_Guardar"
                    android:layout_width="106dp"
                    android:layout_height="22dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/btnnaranja"
                    android:text="GUARDAR"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>