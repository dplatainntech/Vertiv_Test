<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formatos.PreOrden.POHerramientasFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipos, Herramientas y Materiales"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/EHM_lista"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:background="@drawable/radiosmultitext"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utilización de productos quimicos"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="¿Cuenta con las Hojas de Seguridad (M)SDS en el sitio?"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/EHM_rd_si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SI" />

                <RadioButton
                    android:id="@+id/EHM_rd_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NO" />

                <RadioButton
                    android:id="@+id/EHM_rd_na"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="N/A" />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delimitación del Área de Trabajo"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/EHM_chk_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cinta de Precaución" />

            <CheckBox
                android:id="@+id/EHM_chk_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conos/Pedestales" />

            <CheckBox
                android:id="@+id/EHM_chk_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mixta (Conos y Cinta.)" />

            <CheckBox
                android:id="@+id/EHM_chk_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Malla" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/EHM_chk_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="Otros" />

                <EditText
                    android:id="@+id/EHM_edtx_otro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiosedittext"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="15dp"
                    android:paddingLeft="8dp"/>
            </LinearLayout>
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/EHM_btn_Cancelar"
                android:layout_width="106dp"
                android:layout_height="22dp"
                android:layout_margin="20dp"
                android:background="@drawable/btngris"
                android:text="CANCELAR"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/EHM_btn_Guardar"
                android:layout_width="106dp"
                android:layout_height="22dp"
                android:layout_margin="20dp"
                android:background="@drawable/btnnaranja"
                android:text="GUARDAR"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </LinearLayout>

    </ScrollView>

</FrameLayout>