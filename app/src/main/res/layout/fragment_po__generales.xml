<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Formatos.PreOrden.PO_GeneralesFragment">

    <!-- TODO: Update blank fragment layout -->

        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Datos Generales"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Proyecto: "
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/Gral_proyecto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiosedittext"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:paddingLeft="7dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="SR:"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/Gral_SR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radiosedittext"
                        android:ems="10"
                        android:paddingLeft="7dp"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task:"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/Gral_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radiosedittext"
                        android:ems="10"
                        android:paddingLeft="7dp"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/autocompliteLY1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/areaLista1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/filtro1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="SR"/>

                    <ImageView
                        android:id="@+id/cerrarlista1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/firmatache"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>
                    />
                </LinearLayout>

                <ListView
                    android:id="@+id/listaAuto1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollingCache="false"
                    android:smoothScrollbar="true" />


            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Cliente: "
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/Gral_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiosedittext"
                    android:ems="10"
                    android:gravity="start|top"
                    android:paddingLeft="7dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/autocompliteLY"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/areaLista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/filtro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Cliente"/>

                    <ImageView
                        android:id="@+id/cerrarlista"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/firmatache"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>
                    />
                </LinearLayout>

                <ListView
                    android:id="@+id/listaAutoC"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollingCache="false"
                    android:smoothScrollbar="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/sitio"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Sitio: "
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/Gral_sitio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiosedittext"
                    android:ems="10"
                    android:paddingLeft="7dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/autocompliteLY3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/areaLista3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/filtro3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Sitio"/>

                    <ImageView
                        android:id="@+id/cerrarlista3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/firmatache"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>
                    />
                </LinearLayout>

                <ListView
                    android:id="@+id/listaAuto3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollingCache="false"
                    android:smoothScrollbar="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView

                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Dirección"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/Gral_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiosmultitext"
                    android:ems="10"
                    android:gravity="start|top"
                    android:paddingLeft="7dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView

                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Referencia: "
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/Gral_referencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiosmultitext"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:paddingLeft="7dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView

                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha: "
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/po_tv_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radiosedittext"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:id="@+id/po_Button_fecha"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/asignaciones" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView

                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Usuario Final: "
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <EditText

                    android:id="@+id/Gral_usuarioF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiosedittext"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="7dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Lider de Grupo"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/Gral_liderG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiosedittext"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="7dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/EHM_btn_Cancelar"
                    android:layout_width="106dp"
                    android:layout_height="22dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/btngris"
                    android:text="CANCELAR"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/buttonGeberalesGuardar"
                    android:layout_width="106dp"
                    android:layout_height="22dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/btnnaranja"
                    android:text="GUARDAR"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    <!--<ScrollView
    </ScrollView> -->


</FrameLayout>