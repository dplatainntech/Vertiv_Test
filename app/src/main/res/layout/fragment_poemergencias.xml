<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formatos.PreOrden.POEmergenciasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de Emergencias:"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="17dp"
            android:paddingBottom="18dp"/>

        <EditText
            android:id="@+id/emergen_editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="911"
            android:background="@drawable/radiosedittext"
            android:textAlignment="center"
            android:maxLength="10"/>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de su Supervisor Vertiv:"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="17dp"
            android:paddingTop="30dp"/>

        <EditText
            android:id="@+id/emergen_editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            android:background="@drawable/radiosedittext"
            android:inputType="number"
            android:textAlignment="center"
            android:maxLength="10"/>

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital más cercano:"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="17dp"
            android:paddingTop="35dp"
            />

        <EditText
            android:id="@+id/emergen_editText3"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/radiosmultitext"
            android:ems="10"
            android:gravity="start|top"
            android:textSize="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="textMultiLine"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="40dp">

            <Button
                android:id="@+id/Emergencia_btn_Cancelar"
                android:layout_width="106dp"
                android:layout_height="22dp"
                android:layout_margin="20dp"
                android:background="@drawable/btngris"
                android:text="CANCELAR"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/Emergencia_btn_Guardar"
                android:layout_width="106dp"
                android:layout_height="22dp"
                android:layout_margin="20dp"
                android:background="@drawable/btnnaranja"
                android:text="GUARDAR"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>