<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alerts.Bieenvenida">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/info"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido a Vertiv"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/BienveniaP1"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AVISO DE CONFORMIDAD"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/BievenidaP2"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/buttonCerrar"
                    android:layout_width="150dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radiusbutonnaranja"
                    android:padding="0dp"
                    android:text="CONTINUAR"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>